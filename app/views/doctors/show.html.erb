<h1>Doctor: <%= @doctor.name %></h1>

<p>Specialty: <%= @doctor.specialty %></p>
<p>University: <%= @doctor.university %></p>
<p>Hospital: <%= @doctor.working_hospital %></p>
<p>Patients:</p>
<ul>
  <% @doctor.patients.each do |patient| %>
    <li id="patient-<%= patient.id %>"><%= patient.name %><br>
    <%= button_to 'Remove Patient', "/doctors/#{@doctor.id}", {method: :delete, params: { patient_id: patient.id }} %><br><br></li>
  <% end %>
</ul>
